<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf"
    tools:context=".LicenceDetailsActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="370dp"
        android:layout_height="560dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:elevation="50mm"
        android:padding="15dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profilePictureInner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:contentDescription="Profile Picture"
                android:src="@drawable/ic_launcher_background" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fullNames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profilePictureInner"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Full Names:"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profilePictureInner"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/fullNames"
                android:text="Full Names"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/names"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Birth Date:"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/birthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/names"
                android:layout_marginLeft="108dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/dob"
                android:text="Birth Date"
                android:textSize="20sp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/genderOfProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birthDate"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Gender:"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/profileGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birthDate"
                android:layout_marginLeft="132dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/genderOfProfile"
                android:text="Gender"
                android:textSize="20sp" />


            <View
                android:id="@+id/lineDivider"
                android:layout_width="360dp"
                android:layout_height="2dp"
                android:layout_below="@+id/profileGender"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/idNumberInner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineDivider"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="ID Number:"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/idNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineDivider"
                android:layout_toRightOf="@+id/idNumberInner"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="15dp"
                android:text="ID Number"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/LicenceNumberInner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idNumber"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Licence Number:"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/innerLicenceNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idNumber"
                android:layout_toRightOf="@+id/LicenceNumberInner"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="5dp"
                android:text="Licence"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/categoryVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/innerLicenceNumber"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Category Of Vehicle:"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/categoryOfVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/innerLicenceNumber"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/categoryVehicle"
                android:text="C"
                android:textSize="20sp" />

            <View
                android:id="@+id/lineDivider2"
                android:layout_width="360dp"
                android:layout_height="2dp"
                android:layout_below="@+id/categoryOfVehicle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/issueDated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineDivider2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Issue Date:"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/issueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineDivider2"
                android:layout_toRightOf="@+id/issueDated"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="15dp"
                android:text="Issue Date"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/expiryDated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/issueDate"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Expiry Date:"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/expiryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/issueDate"
                android:layout_toRightOf="@+id/expiryDated"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:text="Expiry Date"
                android:textSize="20sp" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expiryDate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="Renew"
                android:id="@+id/renewBtn"/>


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>